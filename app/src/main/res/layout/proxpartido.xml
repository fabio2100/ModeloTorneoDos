<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnl"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/equipo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/equipo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl"
        android:drawableStart="@drawable/place25"
        android:drawableLeft="@drawable/place25"

        />

    <TextView
        android:id="@+id/fechayhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lugar"
        android:drawableStart="@drawable/fechayhora25"
        android:drawableLeft="@drawable/fechayhora25"

        />

    <TextView
        android:id="@+id/nrodefecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechayhora"
        android:drawableStart="@drawable/nrofecha25"
        android:drawableLeft="@drawable/nrofecha25"

        />

</RelativeLayout>